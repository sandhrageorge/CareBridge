<h2 class="text-2xl font-bold mb-4 text-center">Login</h2>
 
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "w-full max-w-md mx-auto bg-white p-6 rounded-xl shadow-md" }) do |f| %>
<div class="mb-4">
<%= f.label :email, class: "block text-gray-700 font-bold mb-2" %>
<%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border rounded-lg shadow-sm" %>
</div>
 
  <div class="mb-4">
<%= f.label :password, class: "block text-gray-700 font-bold mb-2" %>
<%= f.password_field :password, autocomplete: "current-password", class: "w-full px-3 py-2 border rounded-lg shadow-sm" %>
</div>
 
  <% if devise_mapping.rememberable? -%>
<div class="mb-4 flex items-center">
<%= f.check_box :remember_me, class: "mr-2" %>
<%= f.label :remember_me, class: "text-gray-600" %>
</div>
<% end -%>
 
  <div class="text-center">
<%= f.submit "Log in", class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
</div>
<% end %>
 
<div class="mt-4 text-center">
<%= link_to "Sign up", new_user_registration_path, class: "text-blue-500 hover:underline" %> |
<%= link_to "Forgot your password?", new_user_password_path, class: "text-blue-500 hover:underline" %>
</div>
