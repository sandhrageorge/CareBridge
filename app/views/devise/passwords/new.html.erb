<h2 class="text-2xl font-bold mb-4 text-center">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "w-full max-w-md mx-auto bg-white p-6 rounded-xl shadow-md" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-4">
    <%= f.label :email, class: "block text-gray-700 font-bold mb-2" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border rounded-lg shadow-sm" %>
  </div>

  <div class="text-center">
    <%= f.submit "Send me reset password instructions", class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
  </div>
<% end %>
<div class="mt-4 text-center">
<%= link_to "Log in", new_user_session_path, class: "text-blue-500 hover:underline" %> |
<%= link_to "Sign up", new_user_registration_path, class: "text-blue-500 hover:underline" %>
</div>