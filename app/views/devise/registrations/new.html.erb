<h2 class="text-2xl font-bold mb-4 text-center">Sign Up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "w-full max-w-md mx-auto bg-white p-6 rounded-xl shadow-md" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-4">
  <%= f.label :email, class: "block text-gray-700 font-bold mb-2" %>
  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border rounded-lg shadow-sm" %>
  </div>

  <div class="mb-4">
    <%= f.label :password, class: "block text-gray-700 font-bold mb-2" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 border rounded-lg shadow-sm" %>
  </div>

  <div class="mb-4">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",  class: "w-full px-3 py-2 border rounded-lg shadow-sm" %>
  </div>

  <div class="text-center">
    <%= f.submit "Sign up", class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
  </div>
<% end %>
<div class="mt-4 text-center">
<%= link_to "Log in", new_user_session_path, class: "text-blue-500 hover:underline" %> 
</div>